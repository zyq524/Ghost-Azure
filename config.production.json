{
	"url": "https://www.sitecoreessentials.com",
	"server": {
		"host": "127.0.0.1",
		"port": process.env.PORT	
    },
    "database": {
        "client": "sqlite3",
        "connection": {
            "filename": "content/data/ghost.db"
        },
        "debug": false
    },
    "paths": {
        "contentPath": "content/"
    },
    "privacy": {
        "useRpcPing": false,
        "useUpdateCheck": true
    },
    "useMinFiles": false,
    "caching": {
		"frontend": {
			"maxAge": 600
		}
	}
	"forceAdminSSL": true
}